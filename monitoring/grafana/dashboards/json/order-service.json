{
  "title": "Order Service Dashboard",
  "uid": "order-service",
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "30s",
  "tags": ["order", "node", "logs"],
  "panels": [
    {
      "id": 1,
      "title": "Orders Created",
      "type": "timeseries",
      "datasource": "Prometheus",
      "gridPos": {"x": 0, "y": 0, "w": 12, "h": 8},
      "targets": [
        {
          "expr": "rate(orders_created_total{service=\"order-service\"}[5m])",
          "legendFormat": "orders/s",
          "refId": "A"
        }
      ]
    },
    {
      "id": 2,
      "title": "Order Errors",
      "type": "timeseries",
      "datasource": "Prometheus",
      "gridPos": {"x": 12, "y": 0, "w": 12, "h": 8},
      "targets": [
        {
          "expr": "increase(order_errors_total{service=\"order-service\"}[5m])",
          "legendFormat": "errors",
          "refId": "A"
        }
      ]
    },
    {
      "id": 3,
      "title": "Memory Usage",
      "type": "timeseries",
      "datasource": "Prometheus",
      "gridPos": {"x": 0, "y": 8, "w": 12, "h": 8},
      "targets": [
        {
          "expr": "process_resident_memory_bytes{service=\"order-service\"}",
          "legendFormat": "RSS",
          "refId": "A"
        }
      ]
    },
    {
      "id": 4,
      "title": "CPU Usage",
      "type": "timeseries",
      "datasource": "Prometheus",
      "gridPos": {"x": 12, "y": 8, "w": 12, "h": 8},
      "targets": [
        {
          "expr": "100 * rate(process_cpu_seconds_total{service=\"order-service\"}[5m])",
          "legendFormat": "CPU %",
          "refId": "A"
        }
      ]
    }
  ]
}
