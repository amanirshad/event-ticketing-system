{
  "title": "Payment Service Dashboard",
  "uid": "payment-service",
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "30s",
  "tags": ["payment", "prometheus"],
  "templating": {
    "list": [
      {
        "name": "job",
        "label": "Service",
        "type": "query",
        "datasource": "Prometheus",
        "query": "label_values(payments_total, job)",
        "refresh": 1,
        "includeAll": true,
        "allValue": ".*",
        "current": {
          "text": "All",
          "value": "$__all"
        }
      }
    ]
  },
  "panels": [
    {
      "id": 1,
      "title": "Payment Requests Rate",
      "type": "timeseries",
      "datasource": "Prometheus",
      "gridPos": {"x": 0, "y": 0, "w": 12, "h": 8},
      "targets": [
        {
          "expr": "rate(payments_total{job=~\"$job\"}[5m])",
          "legendFormat": "{{status}}",
          "refId": "A"
        }
      ]
    },
    {
      "id": 2,
      "title": "Payment Amount Histogram",
      "type": "timeseries",
      "datasource": "Prometheus",
      "gridPos": {"x": 12, "y": 0, "w": 12, "h": 8},
      "targets": [
        {
          "expr": "histogram_quantile(0.95, rate(payment_amount_bucket{job=~\"$job\"}[5m]))",
          "legendFormat": "95th percentile",
          "refId": "A"
        },
        {
          "expr": "histogram_quantile(0.5, rate(payment_amount_bucket{job=~\"$job\"}[5m]))",
          "legendFormat": "50th percentile",
          "refId": "B"
        }
      ]
    },
    {
      "id": 3,
      "title": "Failed Payment Count",
      "type": "timeseries",
      "datasource": "Prometheus",
      "gridPos": {"x": 0, "y": 8, "w": 12, "h": 8},
      "targets": [
        {
          "expr": "increase(payments_total{status=\"FAILED\",job=~\"$job\"}[5m])",
          "legendFormat": "Failed {{job}}",
          "refId": "A"
        }
      ]
    },
    {
      "id": 4,
      "title": "Payment Latency",
      "type": "timeseries",
      "datasource": "Prometheus",
      "gridPos": {"x": 12, "y": 8, "w": 12, "h": 8},
      "targets": [
        {
          "expr": "histogram_quantile(0.95, rate(payment_duration_seconds_bucket{job=~\"$job\"}[5m]))",
          "legendFormat": "p95 {{job}}",
          "refId": "A"
        },
        {
          "expr": "histogram_quantile(0.5, rate(payment_duration_seconds_bucket{job=~\"$job\"}[5m]))",
          "legendFormat": "p50 {{job}}",
          "refId": "B"
        }
      ]
    }
  ]
}
